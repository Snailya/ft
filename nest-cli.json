{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "service-data": {
      "type": "application",
      "root": "apps/service-data",
      "entryFile": "main",
      "sourceRoot": "apps/service-data/src",
      "compilerOptions": {
        "tsConfigPath": "apps/service-data/tsconfig.app.json"
      }
    },
    "service-convertor": {
      "type": "application",
      "root": "apps/service-convertor",
      "entryFile": "main",
      "sourceRoot": "apps/service-convertor/src",
      "compilerOptions": {
        "tsConfigPath": "apps/service-convertor/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway"
}